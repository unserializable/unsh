# Source this for fun and profit.

# echo : but to stderr
err_echo() {
	>&2 echo $@
}

# ? string value ($1) among string values ($2..$n)
s_in_ss() {
	local value=$1; shift;
	for avalue in $@; do
		if [ "$avalue" = "$value" ]; then
			return 0
		fi
	done

	return 1
}

# echos directory name of currently running script (if any)
script_dir() {
  # relies of $0 being visible from inside the function!
  echo $(dirname $0)
}

# echos file name (no path) of currently running script (if any)
script_name() {
  # relies of $0 being visible from inside the function!
  echo $(basename $0)
}
